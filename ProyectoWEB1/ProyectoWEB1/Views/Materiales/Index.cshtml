@model IEnumerable<ProyectoWEB1.Models.tblMateriales>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Materiales</h2>

<p>
    @Html.ActionLink("Agregar Material", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreMaterial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioMaterial)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreMaterial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioMaterial)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdMaterial }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdMaterial }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdMaterial })
        </td>
    </tr>
}

</table>
